html
  min-height: 100vh;

body
  color: #333;
  font-family: "Georgia", Times New Roman, Times, serif;
  font-weight: normal;
  line-height: 1.5;
  height: 100vh;


.pb-ratio-square
  padding-bottom 100%
.pin-center
  left 50%
  top 50%
  transform translate(-50%, -50%)

@import 'animations/*'

@import 'buttons/*'

@import 'navigations/*'

