@css {
  button:focus {outline:0;}
  
  .underKuning:after{
    content: "";
    width: 3.125rem;
    height: 0.25rem;
    display: block;
    background-color: #f1c40f;
    margin-top: 0.625rem;
  }

  .content.has-foto-cerita figure {
    @apply flex;
    @apply flex-col;
    @apply w-full;
  }

  @screen lg {
    .content.has-foto-cerita figure {
      @apply flex-row;
      @apply items-start;
    }
  }
  .content.has-foto-cerita figure div {
    @apply w-full;
  }

  @screen lg {
    .content.has-foto-cerita figure div {
      @apply w-3/4;
    }
		.content.has-foto-cerita figure div img{
      float: right;
      margin-bottom: 2.25rem;
      max-height: 43.75rem;
      width: auto;
      display: inline-block;
		}	    
  }

  .content.has-foto-cerita figure figcaption {
    @apply relative;
    @apply pb-4;
    @apply pt-2;
  }

  @screen lg {
    .content.has-foto-cerita figure figcaption {
      @apply w-1/4;
    }
  }

  .content.has-foto-cerita figure figcaption p {
    @apply font-georgia;
    @apply ml-0;
    @apply pb-4;
    @apply px-4;
    @apply text-xl;
  }

  .content.has-foto-cerita figure figcaption span {
    @apply absolute;
    @apply bottom-0;
    @apply px-4;
    @apply text-left;
  }

  .content.has-foto-cerita p {
    @apply px-4;
  }

  @screen md {
    .content.has-foto-cerita p {
      @apply ml-20;
      @apply px-0;
      @apply w-2/3;
    }
  }
}